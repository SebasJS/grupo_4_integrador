<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/css/index.css">
    

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
    <link rel="stylesheet" href="/css/app.css">
    
   
    
    <title>Administrador</title>
</head>

<body>
    <%- include("../partials/header.ejs") %>

       <div class="ContenedorRegistro">
        
        <div class="containerAdminIndex">
            <div class="btnCreateNewProduct">
                <form action="/adminusers/users/add">
                    
                    <button type="submit" class="btn btn-primary">Crear nuevo usuario</button>
                </form>
            </div>

            <table class="table table-hover">


                <thead>
                    <tr>
                      <th scope="col">imagen</th>
                      <th scope="col">Nombre</th>
                      <th scope="col">Email</th>
                      <th scope="col">Telefono</th>

                      <th scope="col">Editar</th>
                      <th scope="col">Eliminar</th>
                    </tr>
                  </thead>
                  <tbody>
                    

                    <% users.forEach(users=> { %>
                        <tr >
                         <td ><div class="imgBox"><img class="imagenPerfil" src="/img/imageProfile/<%= users.imagen%>" alt=""></div></td>
                        <td ><%= users.name %></td>
                        <td ><%= users.email %></td>
                        <td ><%= users.phone %></td>
                        <td > <button type="button" class="btn btn-success"><a href="/adminusers/users/edit/<%= users.id%>" class="btnAdminEdit">Editar</a></button> </td>
                        <td ><form action="/adminusers/users/delete/<%= users.id %>?_method=delete" method="POST"><button type="submit" class="btn btn-danger"><a  class="btnAdminEdit">Eliminar</a></button></form></td>
                    </tr>
                            <% });%>
                  
                  </tbody>


                 

              </table>
              






            
        </div>

    </div>


       
        <%- include("../partials/footer") %>
</body>

</html>