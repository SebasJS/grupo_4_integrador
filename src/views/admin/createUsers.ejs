<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/stylesRegistro.css" type="text/css">
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/css/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/app.css">
    <title>Crear Usuario</title>
</head>

<body>
    <%- include("../partials/header.ejs") %>
        <main>

            <div class="contenedorRegProduct" >
            <h2>Crea un Usuario</h2>
            <ul id="errores">

            </ul>
            <form action="/adminusers/users/create" method="POST" enctype="multipart/form-data" class="containerCreate">
                <div class="formu">
                    <label for="name">Nombre:</label>
                    <input type="text" name="name" id="name" required>
                    <label for="email">Email </label>
                    <input type="text" name="email" id="email" required> 
                    <label for="password">Contraseña: </label>
                    <input type="text" name="password" id="password" required>
                    <label for="phone">Celular: </label>
                    <input type="number" name="phone" id="phone" required>
                    <label for="card">Tarjeta: </label>
                    <input type="number" name="card" id="card" required>
                    <label for="imagen">Imagen: </label>
                    <input type="file" name="image" id="image"><br>
                    <label for="direccion">Direccion: </label>
                    <input type="text" name="direccion" id="direccion" required>
                    <p>
                        <label for="categoryId">Categoria: </label><br>
                        <select name="categoryId" id="" required>
                            <option value="" disabled selected> - Elige Categoría - </option>
                            <% categoryUser.forEach(category=> { %>
                                <option value="<%= category.id %>">
                                    <%= category.name %>
                                </option>
                                <% }) %>
                        </select>
                    </p>
                    <p>
                        <label for="departamentoId">Deparamento: </label><br>
                        <select name="departamentoId" id="" required>
                            <option value="" disabled selected> - Elige Deparamento - </option>
                            <% departamento.forEach(departamento=> { %>
                                <option value="<%= departamento.id %>">
                                    <%= departamento.name %>
                                </option>
                                <% }) %>
                        </select>
                    </p>
                    <button class="btn btn-primary" type="submit">Guardar Producto</button>
                </div>
            </form>
        </div>
        </main>
        <%- include("../partials/footer.ejs") %>

            <script src="/JS/createUsers.js"></script>
</body>

</html>