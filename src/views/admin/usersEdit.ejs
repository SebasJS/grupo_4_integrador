<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/app.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Modificar usuario</title>
</head>

<body>
    <%- include("../partials/header.ejs") %>
        <main>
            <h2 id="creationTitle">Actualiza los datos de un usuario</h2>
            <ul id="errores">

            </ul>
            <form action="/admin/users/update/<%= User.id %>" method="POST" class="containerCreate">
                <div id="personalInfo">
                    <h3>Información personal</h3>

                    <label for="name">Nombre:</label>
                    <p><input type="text" name="name" id="name" value="<%= User.name %>" required></p>

                    <label for="phone">Celular: </label>
                    <p><input type="number" name="phone" id="phone" value="<%= User.phone %>" required></p>

                    <label for="card">Tarjeta: </label>
                    <p><input type="number" name="card" id="card" value="<%= User.card %>" required></p>

                    <label for="direccion">Direccion: </label>
                    <p><input type="text" name="direccion" id="direccion" value="<%= User.direccion %>" required></p>
                    <p>
                        <label for="categoryId">Categoria: </label><br>
                        <select name="categoryId" id="" required>
                            <option value="<%= IdCategory.id %>" disabled selected>
                                <%= IdCategory.name %>
                            </option>
                            <% category.forEach(category=> { %>
                                <option value="<%= category.id %>">
                                    <%= category.name %>
                                </option>
                                <% }) %>
                        </select>
                    </p>
                    <p>
                        <label for="departamentoId">Deparamento: </label><br>
                        <select name="departamentoId" id="" required>
                            <option value="<%= IdDepartamento.id %>" disabled selected>
                                <%= IdDepartamento.name %>
                            </option>
                            <% departamento.forEach(departamento=> { %>
                                <option value="<%= departamento.id %>">
                                    <%= departamento.name %>
                                </option>
                                <% }) %>
                        </select>
                    </p>
                </div>
                <div id="perfil">
                    <h3>Perfíl</h3>

                    <label for="email">Email </label>
                    <p><input type="text" name="email" id="email" value="<%= User.email %>" required> </p>

                    <label for="password">Contraseña: </label>
                    <p><input type="text" name="password" id="password" value="<%= User.password %>" required></p>
                    
                    <label for="imagen">Imagen: </label>
                    <p><input type="file" name="image" id="image"><br></p>

                    <button type="submit">Guardar Cambios</button>
                </div>

            </form>
        </main>
        <%- include("../partials/footer.ejs") %>
            <script src="/JS/usersEdit.js"></script>
</body>

</html>