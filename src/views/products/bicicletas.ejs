<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todos los Productos</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <%- include("../partials/header.ejs") %>
        <div>
           

            <img src="/img/banner-altisport.jpg" id="banner">
        </div>


        <!-- todos los productos -->
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Bicicletas</h2>
                </div>
                <% bicicletas.forEach(product=>{/* let finalPrice = (product.price *
                    ((100-product.discount)/100)).toFixed(0); */ %>

                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/products/product-info/<%=product.id%>">
                                <figure class="product-box_image">
                                    <img src="/img/<%=product.imagen%>" alt="imagen de producto">
                                </figure>
                                <article class="product-box_data">
                                    <h2>$ <%=product.price%>
                                    </h2>
                                    <span>
                                        <%=product.discount%>% OFF
                                    </span>
                                    <p>
                                        <%=product.name%>
                                    </p>
                                    <i class="fas fa-truck"></i>
                                </article>
                            </a>
                        </section>
                    </div>
                    <% }); %>

            </div>
        </div>
        <!-- /todos los productos -->
        <%- include("../partials/footer.ejs") %>

</body>

</html>